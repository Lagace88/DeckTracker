<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textIntroTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Deck Tracker"
        android:textColor="@android:color/darker_gray"
        android:textSize="110dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textIntroBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textIntroTop"
        android:layout_centerHorizontal="true"
        android:text="Pro"
        android:textColor="@android:color/darker_gray"
        android:textSize="110dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/btnOptions"
        android:layout_alignLeft="@+id/btnOptions"
        android:layout_alignRight="@+id/btnOptions"
        android:layout_alignStart="@+id/btnOptions"
        android:layout_centerVertical="true"
        android:height="70dp"
        android:text="Start"
        android:textSize="55dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnOptions"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:height="70dp"
        android:text="Options"
        android:textSize="55dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/btnOptions"
        android:layout_alignLeft="@+id/btnOptions"
        android:layout_alignRight="@+id/btnOptions"
        android:layout_alignStart="@+id/btnOptions"
        android:layout_below="@+id/btnOptions"
        android:layout_marginTop="30dp"
        android:height="70dp"
        android:text="Exit"
        android:textSize="55dp"
        android:singleLine="true" />

</RelativeLayout>
