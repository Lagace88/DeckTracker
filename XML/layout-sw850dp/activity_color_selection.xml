<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageButton
        android:id="@+id/ibBlack"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ibGreen"
        android:layout_marginLeft="40dp"
        android:background="#000000" />

    <ImageButton
        android:id="@+id/ibGreen"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/ibBlack"
        android:layout_toRightOf="@+id/ibBlack"
        android:background="#056600" />

    <ImageButton
        android:id="@+id/ibRed"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_alignTop="@+id/ibGreen"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/ibGreen"
        android:layout_toRightOf="@+id/ibGreen"
        android:background="#a70308" />

    <ImageButton
        android:id="@+id/ibPurple"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_alignLeft="@+id/ibBlack"
        android:layout_alignStart="@+id/ibBlack"
        android:layout_below="@+id/ibBlack"
        android:layout_marginTop="40dp"
        android:background="#a602b2" />

    <ImageButton
        android:id="@+id/ibBlue"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_alignLeft="@+id/ibGreen"
        android:layout_alignStart="@+id/ibGreen"
        android:layout_below="@+id/ibGreen"
        android:layout_marginTop="40dp"
        android:background="#0418ad" />

    <ImageButton
        android:id="@+id/ibYellow"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_alignLeft="@+id/ibRed"
        android:layout_alignStart="@+id/ibRed"
        android:layout_below="@+id/ibRed"
        android:layout_marginTop="40dp"
        android:background="#ece800" />

    <ImageButton
        android:id="@+id/ibCyan"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_alignLeft="@+id/ibPurple"
        android:layout_alignStart="@+id/ibPurple"
        android:layout_below="@+id/ibPurple"
        android:layout_marginTop="40dp"
        android:background="#02b29b" />

    <ImageButton
        android:id="@+id/ibOrange"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_alignLeft="@+id/ibBlue"
        android:layout_alignStart="@+id/ibBlue"
        android:layout_below="@+id/ibBlue"
        android:layout_marginTop="40dp"
        android:background="#f07924" />

    <ImageButton
        android:id="@+id/ibPink"
        android:layout_width="250dp"
        android:layout_height="315dp"
        android:layout_alignLeft="@+id/ibYellow"
        android:layout_alignStart="@+id/ibYellow"
        android:layout_below="@+id/ibYellow"
        android:layout_marginTop="40dp"
        android:background="#fe348c" />
</RelativeLayout>
