<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <EditText
        android:id="@+id/editNewName"
        android:layout_width="750dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:hint="New Name"
        android:inputType="textNoSuggestions"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="90dp"
        tools:editable="true"
        tools:focusable="true"
        tools:focusableInTouchMode="true" />

    <Button
        android:id="@+id/btn_CNDone"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_CNCancel"
        android:layout_alignBottom="@+id/btn_CNCancel"
        android:layout_alignLeft="@+id/editNewName"
        android:layout_alignStart="@+id/editNewName"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="Done"
        android:textSize="60dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_CNCancel"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editNewName"
        android:layout_alignRight="@+id/editNewName"
        android:layout_below="@+id/editNewName"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:text="Cancel"
        android:textSize="60dp"
        android:singleLine="true" />
</RelativeLayout>