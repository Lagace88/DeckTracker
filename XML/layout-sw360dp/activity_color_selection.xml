<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/ibBlack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/ibGreen"
        android:background="#056600"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ibBlack"
        android:layout_toEndOf="@+id/ibBlack"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/ibRed"
        android:background="#a70308"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ibGreen"
        android:layout_toEndOf="@+id/ibGreen"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/ibPurple"
        android:background="#a602b2"
        android:layout_below="@+id/ibBlack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/ibBlue"
        android:background="#0418ad"
        android:layout_below="@+id/ibGreen"
        android:layout_alignLeft="@+id/ibGreen"
        android:layout_alignStart="@+id/ibGreen"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/ibYellow"
        android:background="#ece800"
        android:layout_below="@+id/ibRed"
        android:layout_alignLeft="@+id/ibRed"
        android:layout_alignStart="@+id/ibRed"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/ibCyan"
        android:background="#02b29b"
        android:layout_below="@+id/ibPurple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/ibOrange"
        android:background="#f07924"
        android:layout_below="@+id/ibBlue"
        android:layout_alignLeft="@+id/ibBlue"
        android:layout_alignStart="@+id/ibBlue"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/ibPink"
        android:background="#fe348c"
        android:layout_below="@+id/ibYellow"
        android:layout_alignLeft="@+id/ibYellow"
        android:layout_alignStart="@+id/ibYellow"
        android:layout_marginTop="20dp" />
</RelativeLayout>
