<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tyler.hearthstonedecktracker.Intro">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgBackground"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hearthstone"
        android:id="@+id/textIntroTop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deck Tracker"
        android:id="@+id/textIntroBottom"
        android:layout_below="@+id/textIntroTop"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btnStart"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:layout_alignRight="@+id/btnOptions"
        android:layout_alignEnd="@+id/btnOptions"
        android:layout_alignLeft="@+id/btnOptions"
        android:layout_alignStart="@+id/btnOptions"
        android:height="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/btnOptions"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:height="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btnExit"
        android:layout_below="@+id/btnOptions"
        android:layout_alignLeft="@+id/btnOptions"
        android:layout_alignStart="@+id/btnOptions"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:layout_alignRight="@+id/btnOptions"
        android:layout_alignEnd="@+id/btnOptions"
        android:height="70dp" />

</RelativeLayout>
