<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgOptionsBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/rextOptions"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="70dp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnBack"
        android:textSize="30dp"
        android:width="350dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/SFDSpinner"
        android:layout_alignLeft="@+id/SFDSpinner"
        android:layout_alignStart="@+id/SFDSpinner"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background"
        android:id="@+id/btnBackground"
        android:layout_below="@+id/rextOptions"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:width="350dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="How To Sort Your Decks"
        android:id="@+id/textSYD"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_below="@+id/btnBackground"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/SYDSpinner"
        android:layout_below="@+id/textSYD"
        android:layout_alignLeft="@+id/textSYD"
        android:layout_alignStart="@+id/textSYD"
        android:layout_marginTop="15dp">

    </Spinner>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="How To Sort Faced Decks"
        android:id="@+id/textSFD"
        android:layout_below="@+id/SYDSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/SFDSpinner"
        android:layout_below="@+id/textSFD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff" />

</RelativeLayout>