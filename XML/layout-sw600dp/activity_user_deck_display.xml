<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:text="Recommended Deck"
        android:textColor="@android:color/darker_gray"
        android:textSize="40dp" />

    <ListView
        android:id="@+id/decks"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnAddDeck"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/decks"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Add Deck"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/decks"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Back"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txt_RecomendedDeck"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="No Decks Have Been Faced Yet"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_RecomendedDeck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="Your Decks"
        android:textColor="@android:color/darker_gray"
        android:textSize="50dp" />

</RelativeLayout>
